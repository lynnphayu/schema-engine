{
  "name": "drizzle-engine",
  "version": "1.0.0",
  "description": "Schema generator for DAGFlow using Drizzle ORM",
  "main": "schema-gen.ts",
  "scripts": {
    "generate": "tsx schema-gen.ts",
    "migrate:generate": "drizzle-kit generate:pg",
    "migrate:push": "drizzle-kit push:pg",
    "migrate:drop": "drizzle-kit drop",
    "migrate:check": "drizzle-kit check:pg",
    "migrate:up": "drizzle-kit up:pg",
    "migrate:down": "drizzle-kit down:pg",
    "build": "tsc",
    "start": "tsx server.ts"
  },
  "dependencies": {
    "body-parser": "^1.20.3",
    "drizzle-kit": "^0.30.6",
    "drizzle-orm": "^0.41.0",
    "express": "^4.21.2",
    "pg": "^8.14.1",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.17.30",
    "@types/pg": "^8.11.11",
    "tsx": "^3.14.0"
  }
}
